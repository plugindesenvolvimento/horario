<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="plugin">

		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.Curso</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.ModalidadeCurso</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.Servidor</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.Cargo</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.Setor</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.Area</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.Pessoa</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.Disciplina</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.PeriodoLetivo</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.Matriz</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.DisciplinasMatriz</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.HorarioTurma</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.DisciplinasHorario</class>		
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.Sala</class>
		<class>br.edu.ifba.plugin.horario.modelo.bd.beans.HorarioDetalhe</class>

		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/plugin" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="admin" />
		</properties>

	</persistence-unit>

</persistence>
